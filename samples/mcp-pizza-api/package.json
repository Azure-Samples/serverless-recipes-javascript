{
  "name": "mcp-pizza-api",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/src/functions/**/*.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "prestart": "npm run clean",
    "start:storage": "azurite --silent --location ./.azurite --debug ./.azurite/debug.log",
    "start:host": "func start",
    "start": "concurrently npm:start:* npm:watch --raw --kill-others",
    "update:local-settings": "node ./scripts/update-local-settings.mjs",
    "postinstall": "npm run update:local-settings"
  },
  "author": "Microsoft",
  "license": "MIT",
  "template": "functions",
  "dependencies": {
    "@azure/cosmos": "^4",
    "@azure/functions": "^4.7.2-beta.0",
    "@azure/identity": "^4",
    "@azure/storage-blob": "^12",
    "dotenv": "^16",
    "zod": "^3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "azure-functions-core-tools": "^4",
    "azurite": "^3",
    "concurrently": "^9",
    "genaiscript": "^1",
    "rimraf": "^5",
    "sharp": "^0.33.5",
    "typescript": "^5"
  }
}
