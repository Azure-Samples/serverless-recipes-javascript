{
  "name": "common",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "create:sample": "node .common/scripts/create-sample.js",
    "update:sample": "node .common/scripts/update-sample.js",
    "update:readme": "node .common/scripts/update-readme.js",
    "lint:fix": "xo --fix",
    "lint": "xo"
  },
  "dependencies": {
    "@azure/core-sse": "^2",
    "@azure/cosmos": "^4",
    "@azure/functions": "^4",
    "@azure/identity": "^4",
    "@azure/storage-blob": "^12",
    "@types/node": "^20",
    "azure-functions-core-tools": "^4",
    "azurite": "^3",
    "concurrently": "^9",
    "dotenv": "^16",
    "lit": "^3",
    "openai": "^4",
    "rimraf": "^6",
    "typescript": "^5",
    "vite": "^6",
    "zod": "^3"
  },
  "devDependencies": {
    "xo": "^0.60"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "node"
    ],
    "rules": {
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "import/no-unassigned-import": "off",
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "allowList": {
            "env": true,
            "Dir": true,
            "Db": true
          }
        }
      ]
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": true
  }
}
